{
  "manifest_version": 2,
  "name": "F Helper",
  "version": "1.1",

	"applications": {
		"gecko": {
		  "id": "borderify@mozilla.org",
		  "strict_min_version": "45.0"
		}
	},
	
	"background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
		"tabs",
		"downloads",
		"*://*.furaffinity.net/*",
		"*://*.facdn.net/*"
	]
}